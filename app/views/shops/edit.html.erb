<span id="notice"><%= notice %></span>

<div class="container settings">
<%= render 'customers/header' %>
<div class="col-lg-8 col-lg-offset-2">
  <h1>Settings</h1>
  <%= link_to "< Back to Celebrities & Influencers", customers_path %>
 </div>

<div class="clearfix"></div>
<div class="spacer"></div>

<div class="panel panel-default col-lg-8 col-lg-offset-2 text-center">
	 <div class="panel-body">
		  <%= form_for @shop do |f| %>

		      <h2>Current Plan: <%= @shop.plan.titleize %></h2>
		      <%= link_to 'edit plan', plan_path %>
		  
		    
			 <div class="spacer"></div>

			 <p>Email Notifications: <%= f.check_box :email_notifications, :data => { :toggle => 'toggle', :onstyle=>"info", :size=>"mini" } %></p>


			 <p>Customers who have Wikipedia pages should be considered celebrities: <%= f.check_box :wikipedia_notification, :data => { :toggle => 'toggle', :on => "Yes", :off => "No", :onstyle=>"success", :size=>"mini" } %></p>
			 <p>Customers who have IMDB pages should be considered celebrities: <%= f.check_box :imdb_notification, :data => { :toggle => 'toggle', :on => "Yes", :off => "No", :onstyle=>"success", :size=>"mini" } %></p>

			 <%= render 'social_settings', :f => f %>
			  

			<%= f.submit 'Save Settings', :class=>"btn btn-default" %>

		<% end %>
		  </div>

		  
  </div>




<div class="spacer"></div>



</div>


<script> 

function numberWithCommas(x) {
    return x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
}

$('#shop_twitter_follower_threshold').on('change keyup', function(){
	var twitterCount = numberWithCommas($('#shop_twitter_follower_threshold').val())
	$('.twitter-count').text(twitterCount);
}).triggerHandler('keyup');
	
</script>
