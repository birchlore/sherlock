 
    <div class="text-center scanner">
       
        <div class="clearfix small-spacer"><br /></div>
          <%= form_for @celebrity do |f| %>

            <div class="row" style="width:90%; margin:0 auto;">
              <div class="form-group col-sm-4">
                <%= f.label :first_name, "First Name" %>
                <%= f.text_field :first_name, class:"form-control", placeholder: "e.g. jack" %>
              </div>

              <div class="form-group col-sm-4">
                <%= f.label :last_name, "Last Name" %>
                <%= f.text_field :last_name, class:"form-control", placeholder: "e.g. dorsey" %>
              </div>

              <div class="form-group col-sm-4">
                <%= f.label :email, "Email (optional for Twitter count)" %>
                <%= f.text_field :email, class:"form-control" %>
              </div>
            </div>
            <div class="row">
                <div class="small-spacer"></div>
               <div class="form-group col-sm-12">
                 <%= f.submit "Scan", class:"btn btn-primary scan" %>
               </div>
            </div>
          <% end %>
      </div>
    
    




