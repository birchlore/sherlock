<tr class='celebrity-row'>
   <td>
      <%= link_to customer_archive_path(celebrity), :remote=>"true" do %>
        <i class="glyphicon glyphicon-remove"></i>
      <% end %>  
   </td>
   <td><%= name(celebrity) %></td>
   <td><%= bio(celebrity) %></td>


   <% if current_shop.wikipedia_notification %>
     <td><%= wikipedia_link(celebrity) %></td>
   <% end %>

    <% if current_shop.imdb_notification %>
     <td><%= imdb_link(celebrity) %></td>
   <% end %>

   <% unless current_shop.plan == "free" || current_shop.plan == "basic" %>
     <td><%= klout_score(celebrity) %></td>
     <td><%= youtube_subscriber_count(celebrity) %></td>
     <td><%= twitter_follower_count(celebrity) %></td>
     <td><%= instagram_follower_count(celebrity) %></td>
   <% end %>

   
   
   
   
</tr>

